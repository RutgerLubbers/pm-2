[Unit]
Description=Apache Kafka - broker
Documentation=http://docs.confluent.io/
After=network-online.target confluent-zookeeper.target
Wants=network-online.target

[Service]
Type=simple
User=cp-kafka
Group=confluent
Environment="LOG_DIR=${LOG_DIR}"
ExecStart=/usr/bin/kafka-server-start /etc/kafka/server-${BROKER_ID}.properties
ExecStop=/usr/bin/kafka-server-stop /etc/kafka/server-${BROKER_ID}.properties
TimeoutStopSec=10
Restart=no

[Install]
WantedBy=multi-user.target
